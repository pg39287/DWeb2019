extends layout
block content
  h1 Movie Database
  p Number of movies in the database: #{count}
  button(type="button" data-toggle='modal' data-target='#createMovieModal').btn.btn-outline-primary.mb-2 Add Movie
  br
  nav.navbar-light.form-inline.mb-2
    input#title.form-control(type='search' placeholder='Title...' aria-label='Search').mr-2
    button(onclick="searchMovie()").btn.btn-primary Search


  #createMovieModal.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content.border.border-dark
        .modal-header.font-weight-bold
          h5.modal-title.center-text Add Movie
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form#taskForm.needs-validation(action='/movies' method='POST')
            .form-group
              label.font-weight-bold(for='title') Title:  
              input#tit.form-control(type='text' name='title' placeholder='Add a title...')

            .form-group
              label.font-weight-bold(for='year') Year: 
              input#prov.form-control(type='text' name='year' placeholder="Add a year...")
   
            .form-group
              label.font-weight-bold(for='cast') Cast: 
              input#prov.form-control(type='text' name='cast' placeholder="Add the cast separated by commas...")

            .form-group
              label.font-weight-bold(for='genres') Genres: 
              input#prov.form-control(type='text' name='genres' placeholder="Add the genres separated by commas...")

            .form-group
              button.link-button.form-control(type='submit').bnt.btn-primary Submit               
        .modal-footer.font-weight-bold
          button.link-button.font-weight-bold(type='button' data-dismiss='modal').btn.btn-primary Close